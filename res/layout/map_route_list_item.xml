<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/route_item_height"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" 
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/box_image"
        android:gravity="center" >

        <TextView
            android:id="@+id/route_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="50(A-B)\n142(B-C)\n192(C-D)\n192(C-D)\n192(C-D)\n192(C-D)"
            android:textSize="@dimen/route_list_text_size" />
        
        <LinearLayout android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
            android:layout_weight="7"
            android:gravity="center">
	
            <TextView
                android:id="@+id/route_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bus"
                android:textSize="@dimen/route_list_text_size" />
            
	        <TextView
	            android:id="@+id/eta_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="30m"
	            android:textSize="@dimen/route_list_text_size" />
	    </LinearLayout>
    </LinearLayout>

</LinearLayout>
